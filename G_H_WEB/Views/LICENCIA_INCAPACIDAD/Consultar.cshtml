    function ConsultaTraza(CAMPO_REQUISICION) {
        debugger;        
        var campo_re = 0;
        $(".bodytraza").empty();
        $(".nombre_traza").text("");
        $("#ModalLabelTraza").text("TRAZA " + CAMPO_REQUISICION.replace(/_/g, " "))
        $(".nombre_traza").text(CAMPO_REQUISICION.replace(/_/g," "));
        var COD_REQUISICION = @Model.COD_REQUISICION;
            $('body').loading({
                message: 'Cargando...'
            });
            $.ajax({
                url: "@Url.Action("ConsultarTraza", "REQUISICION")",
                type: 'GET',
                data: { COD_REQUISICION: COD_REQUISICION, CAMPO_REQUISICION: CAMPO_REQUISICION},
                success: function (respuesta) {                    
                    $.each(respuesta, function (key, value) {
                        debugger;                        
                        if (value[CAMPO_REQUISICION] != null && value[CAMPO_REQUISICION] != campo_re) {
                            $(".bodytraza").append("<tr><td>" + value.COD_REQUISICION + "</td > <td>" + value[CAMPO_REQUISICION] + "</td > <td>" + value.USUARIO_REGISTRO + "</td > <td>" + value.FECHA_REGISTRO + "</td ><td>" + value.NOMBRE_ESTADOS_REQUISICION + "</td > </tr > ");
                        }        
                        campo_re = value[CAMPO_REQUISICION];
                    });
                    $('body').loading('stop');
                    $('.ModalTraza').modal("show");
                },
                error: function (er){
                    $('body').loading('stop');
                }
            });
    }

