        $("._metodoCrear").css("display", "block");
    }


    function APROBAR_REQUISICION() {
        var CargoCod = "@paraModel.COD_REQUISICION_CREADA";
        $(".__metodoAprobar").css("display", "block");
        $("#mensaje_aprobar").text(CargoCod);

