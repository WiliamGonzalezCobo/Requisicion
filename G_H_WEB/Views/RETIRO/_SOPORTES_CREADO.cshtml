        }
        else {
            if ($('#FechaRetiro').val() == "" || $("#FechaRetiro").val() == "Fecha") { $("#campoFecha").removeAttr("hidden"); }
            capturacausaretiro($("#causaretiro").val());
        }
          /* fin funcional */

            }
