                        $('#DETALLE_ERROR').html(result.responseText);
                        var err = "Error " + " " + status;
                        console.log(err);
                    }
                });
            },
            error: function (result, xhr, status) {
                $('#DETALLE_ERROR').html(result.responseText);
                var err = "Error " + " " + status;
                console.log(err);
            }
        });
    }

    /*funcion para cargar  el archivo y crear el soporte si ya tiene el cod de retiro crea el soporte*/
