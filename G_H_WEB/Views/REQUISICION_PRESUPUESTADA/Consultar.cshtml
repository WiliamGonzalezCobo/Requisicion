@model MODELO_DATOS.MODELO_REQUISICION.REQUISICIONViewModel
@using MODELO_DATOS.MODELO_REQUISICION;
@using UTILS.Settings
@{
    ViewBag.Title = "Crear Requisición Presupuestada";
    Layout = "~/Views/Shared/_Layout.cshtml";
    RESPUESTA_POP_UP paraModel = @ViewBag.resultadoPopUpNoJefe ?? new RESPUESTA_POP_UP();
}
<div class="col">
    <div class="TituloRequisiciones">@ViewBag.Title</div>

 
    <div id="SeccionRequisicionParciales" class="col">

        <div class="row" style="margin: 20px;">
            <div class="col-md-3 col-lg-3 col-xl-3">
                    <div class="col-12 rectangle_Pop_UP ImagenActiva">
                        <img src="../../assets/img/imgPresupuestada.png" class="img-responsive maxImagen" />
                        <div class="presupuestada">Presupuestada</div>
                    </div>
            </div>
            <div class="col-md-3 col-lg-3 col-xl-3">
                    <div class="col-12 rectangle_Pop_UP">
                        <img src="../../assets/img/imgNoPresupuestada.png" class="img-responsive maxImagen" />
                        <div class="no-presupuestada">No presupuestada</div>
                    </div>
            </div>
            <div class="col-md-3 col-lg-3 col-xl-3">
                    <div class="col-12 rectangle_Pop_UP">
                        <img src="../../assets/img/imgIncapacidad.png" class="img-responsive maxImagen" />
                        <div class="incapacidad">Incapacidad</div>
                    </div>
            </div>
            <div class="col-md-3 col-lg-3 col-xl-3">
                    <div class="col-12 rectangle_Pop_UP">
                        <img src="../../assets/img/imgLicencia.png" class="img-responsive maxImagen" />
                        <div class="licencia">Licencia</div>
                    </div>
            </div>
        </div>

        <div id="CNform">
            <div class="retiros-detalle">
                <div class="form-group col-md-12">
                    @using (Html.BeginForm("Procesar", "REQUISICION_PRESUPUESTADA"))
                    {

                        if (User.IsInRole(SettingsManager.PerfilJefe))
                        {
                            @Html.Partial("_PartialInfoRequisicion", Model)
                            @Html.Partial("_PartialAutorizacion", Model)
                        }
                        if (User.IsInRole(SettingsManager.PerfilController))
                        {
                            @Html.Partial("_PartialInfoRequisicion", Model)
                            @Html.Partial("_PartialAutorizacion", Model)
                        }
                        if (User.IsInRole(SettingsManager.PerfilBp))
                        {
                            @Html.Partial("_PartialInfoRequisicion", Model)
                            @Html.Partial("_PartialInfoGeneral", Model)
                            @Html.Partial("_PartialInfoSalarial", Model)
                            @Html.Partial("_PartialAutorizacion", Model)

                        }
                        if (User.IsInRole(SettingsManager.PerfilRRHH))
                        {
                            @Html.Partial("_PartialInfoRequisicion", Model)
                            @Html.Partial("_PartialInfoGeneral", Model)
                            @Html.Partial("_PartialInfoSalarial", Model)
                            @Html.Partial("_PartialAutorizacion", Model)
                        }
                        if (User.IsInRole(SettingsManager.PerfilUSC))
                        {
                            @Html.Partial("_PartialInfoRequisicion", Model)
                            @Html.Partial("_PartialInfoGeneral", Model)
                            @Html.Partial("_PartialInfoSalarial", Model)
                            @Html.Partial("_PartialAutorizacion", Model)
                        }

                        //Botones
                        <div class="form-group">
                            <div class="col-md-12">

                                @if (User.IsInRole(SettingsManager.PerfilJefe))
                                {
                                    @Html.ActionLink("Cancelar requisición", "Index", "REQUISICION", routeValues: null, htmlAttributes: new { @class = "cancelar-requisicion" })
                                    <input name="submitButton" id="submitButtonCrear" type="submit" value="CREAR REQUISICIÓN" class="crear-requisicion crear-requisicion-texto" />
                                }
                                @if (User.IsInRole(SettingsManager.PerfilController))
                                {
                                    <input name="submitButton" type="submit" value="DEVOLVER REQUISICIÓN" class="BtnDevolver TextoBtnDevolver" />
                                    <input name="submitButton" type="submit" value="APROBAR REQUISICIÓN" class="crear-requisicion crear-requisicion-texto" />

                                }
                                @if (User.IsInRole(SettingsManager.PerfilBp))
                                {
                                    @Html.ActionLink("Cancelar requisición", "Index", "REQUISICION", routeValues: null, htmlAttributes: new { @class = "cancelar-requisicion" })
                                    <input name="submitButton" type="submit" value="Enviar" class="crear-requisicion crear-requisicion-texto" />
                                }
                                @if (User.IsInRole(SettingsManager.PerfilRRHH))
                                {
                                    <input name="submitButton" type="submit" value="APROBAR REQUISICIÓN" class="aprobar-requisicion" />
                                    <input name="submitButton" type="submit" value="RECHAZAR REQUISICIÓN" class="btn-confirmar-retiro" />
                                    <input name="submitButton" type="submit" value="DEVOLVER REQUISICIÓN" class="btn-confirmar-retiro" />
                                }
                                @if (User.IsInRole(SettingsManager.PerfilUSC))
                                {
                                    <input name="submitButton" type="submit" value="APROBAR REQUISICIÓN" class="btn-confirmar-retiro col-md-3" />
                                    <input name="submitButton" type="submit" value="RECHAZAR REQUISICIÓN" class="btn-confirmar-retiro col-md-3" />
                                    <input name="submitButton" type="submit" value="DEVOLVER REQUISICIÓN" class="btn-confirmar-retiro col-md-3" />
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="ModalCreacionNoJefe" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content Content-Popup-Creacion">
                <div class="modal-header">
                    <h5 class="modal-title _metodoDefecto Titulo-Popup-Creacion" id="ModalLabel">Se ha presentado un error</h5>
                    <h5 class="modal-title _metodoCrear Titulo-Popup-Creacion" id="ModalLabel">Requisición creada con éxito</h5>
                    <h5 class="modal-title __metodoAprobar Titulo-Popup-Creacion" id="ModalLabel">Requisición aprobada con éxito</h5>
                    <h5 class="modal-title __metodoModificar Titulo-Popup-Creacion" id="ModalLabel">Requisición modificada con éxito</h5>
                    <h5 class="modal-title __metodoRechazar Titulo-Popup-Creacion" id="ModalLabel">Requisición rechazada con éxito</h5>
                    <h5 class="modal-title __metodoEnviar Titulo-Popup-Creacion" id="ModalLabel">Requisición enviada con éxito</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body Content-Popup">
                    <br />
                    <h2 class="_metodoCrear Texto-Popup-Creacion">Se créo la requisición para el cargo de  <span class="Texto-Popup-Creacion-Negrilla" id="mensaje1"></span> con ID <span class="Texto-Popup-Creacion-Negrilla" id="mensaje2"></span></h2>
                    <h2 class="__metodoAprobar Texto-Popup-Creacion">Se aprobó la requisición con ID <span class="Texto-Popup-Creacion-Negrilla" id="mensaje_aprobar"></span></h2>
                    <h2 class="__metodoModificar Texto-Popup-Creacion">Se modificó la requisición con ID <span class="Texto-Popup-Creacion-Negrilla" id="mensaje_modificar"></span></h2>
                    <h2 class="__metodoRechazar Texto-Popup-Creacion">Se Rechazó la requisición con ID <span class="Texto-Popup-Creacion-Negrilla" id="mensaje_rechazar"></span></h2>
                    <h2 class="_metodoDefecto Texto-Popup-Creacion">Por favor contacte al <span class="Texto-Popup-Creacion-Negrilla" id="mensaje_rechazar">administrador</span> del sistema</h2>
                    <h2 class="__metodoEnviar Texto-Popup-Creacion">Se Envío la requisición con ID <span class="Texto-Popup-Creacion-Negrilla" id="mensaje_Enviar"></span></h2>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="ModalCancelNoJefe" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalLabel">Está a punto de cancelar la requisición</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
                <div class="retiros-detalle modal-body">
                    <br />
                    <h4>¿Está Seguro de Cancelarla?</h4>

                    <button type="button" class="filtroPorUsuario btn-cancelar-retriro" data-dismiss="modal" aria-label="Aceptar" onclick="NoCancelarJefe()" style="cursor:pointer;">
                        No

                    </button>
                    <button type="button" class="filtroPorUsuario btn-confirmar-retiro" data-dismiss="modal" aria-label="Cancelar" onclick="SiCancelarJefe()" style="cursor:pointer;">
                        Si

                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade ModalTraza" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h7 class="modal-title" id="ModalLabelTraza"></h7>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="row modal-body">
                    <div class="col-md-12 col-lg-12 col-xl-12 table-responsive">
                        <h3>Modificaciones</h3>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Cod Requisición</th>
                                    <th class="nombre_traza"></th>
                                    <th>Usuario Registro</th>
                                    <th>Fecha Registro</th>
                                    <th>Cod Estado</th>
                                </tr>
                            </thead>
                            <tbody class="bodytraza"></tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
@*<script src="~/Scripts/REQUISICIONES_PRESUPUESTADAS.js"></script>*@
<script type="text/javascript">

    $(document).ready(function () {

        if ("@User.IsInRole(SettingsManager.PerfilJefe)"== "True") {
            if (@Model.COD_REQUISICION!= 0) {
                $("#submitButtonCrear").text("Modificar Requisición");
            }
        }
        $("._metodoCrear").css("display", "none");
        $(".__metodoAprobar").css("display", "none");
        $(".__metodoModificar").css("display", "none");
        $(".__metodoRechazar").css("display", "none");
        $(".__metodoEnviar").css("display", "none");

        VALIDACION_TRAZA();

        var resultado = "@ViewBag.resultadoInsertExitosoOno";


        if (resultado == "True") {
            debugger;
            var _metodo = "@paraModel.METODO";
            if (_metodo == "Crear") {
                CREAR_REQUISICION();
                $("._metodoDefecto").css("display", "none");

            }
            else if (_metodo == "Aprobar") {
                APROBAR_REQUISICION();
                $("._metodoDefecto").css("display", "none");
            }
            else if (_metodo == "Modificar") {
                MODIFICAR_REQUISICION();
                $("._metodoDefecto").css("display", "none");
            }

            else if (_metodo == "Rechazar") {
                RECHAZAR_REQUISICION();
                $("._metodoDefecto").css("display", "none");
            }
            else if (_metodo == "Enviar") {
                ENVIAR_REQUISICION();
                $("._metodoDefecto").css("display", "none");
            }

            $('#ModalCreacionNoJefe').modal("show");
        }

        $(document).on('submit', 'form', function () {
            $(this).attr("disabled", true);
          
        })
    });

    function VALIDACION_TRAZA() {
        var jsonObj = @Html.Raw(Json.Encode(ViewBag.traza));
        if (jsonObj) {
            debugger;
            for (i = 0; i < jsonObj.length; i++) {
                if (jsonObj[i].TRAZA == "true") {
                    var campo = "#" + jsonObj[i].CAMPOS + "_S";
                    if ($(campo).length) {
                        debugger;
                        $(campo).removeAttr("style");
                        var traza = jsonObj[i].TRAZA;
                    }
                }
            }
        }
    }

    function CREAR_REQUISICION() {
         var CargoText = "@paraModel.NOMBRE_COD_CARGO";
            var CargoCod = "@paraModel.COD_REQUISICION_CREADA";
            $("#mensaje1").text(CargoText);
            $("#mensaje2").text(CargoCod);
        $("._metodoCrear").css("display", "block");
    }


    function APROBAR_REQUISICION() {
        var CargoCod = "@paraModel.COD_REQUISICION_CREADA";
        $(".__metodoAprobar").css("display", "block");
        $("#mensaje_aprobar").text(CargoCod);

    }
    function MODIFICAR_REQUISICION() {
          var CargoCod = "@paraModel.COD_REQUISICION_CREADA";
        $(".__metodoModificar").css("display", "block");
        $("#mensaje_modificar").text(CargoCod);
    }

      function RECHAZAR_REQUISICION() {
          var CargoCod = "@paraModel.COD_REQUISICION_CREADA";
          $(".__metodoRechazar").css("display", "block");
          $("#mensaje_rechazar").text(CargoCod);
    }

          function ENVIAR_REQUISICION() {
          var CargoCod = "@paraModel.COD_REQUISICION_CREADA";
          $(".__metodoEnviar").css("display", "block");
          $("#mensaje_Enviar").text(CargoCod);
    }


    $("#btnCancelarNoJefe").on("click", function () {
        $('#ModalCancelNoJefe').modal('show');
    });

    function SiCancelarJefe() {
            $('#ModalCancel').modal('hide');
            window.location.href = '@Url.Action("Index", "REQUISICION")';
        };
    function NoCancelarJefe() {
            $('#ModalCancel').modal('hide');
    };

    $(function () {
        $('.datepicker').datepicker();
    });

     function ConsultaTraza(CAMPO_REQUISICION) {
        debugger;
        $(".bodytraza").empty();
        $(".nombre_traza").text("");
        $("#ModalLabelTraza").text("TRAZA " + CAMPO_REQUISICION.replace(/_/g, " "))
        $(".nombre_traza").text(CAMPO_REQUISICION.replace(/_/g," "));
        var COD_REQUISICION = @Model.COD_REQUISICION;
            $('body').loading({
                message: 'Cargando...'
            });
            $.ajax({
                url: "@Url.Action("ConsultarTraza", "REQUISICION")",
                type: 'GET',
                data: { COD_REQUISICION: COD_REQUISICION, CAMPO_REQUISICION: CAMPO_REQUISICION},
                success: function (respuesta) {
                    $.each(respuesta, function (key, value) {
                        $(".bodytraza").append("<tr><td>" + value.COD_REQUISICION + "</td > <td>" + value[CAMPO_REQUISICION] + "</td > <td>" + value.USUARIO_REGISTRO + "</td > <td>" + value.FECHA_REGISTRO + "</td ><td>" + value.NOMBRE_ESTADOS_REQUISICION +"</td > </tr > ");  
                    });
                    debugger;
                    $('body').loading('stop');
                    $('.ModalTraza').modal("show");
                },
                error: function (er){
                    $('body').loading('stop');
                }
            });
    }


</script>


