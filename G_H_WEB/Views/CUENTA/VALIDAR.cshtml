@model  G_H_WEB.Models.CUENTA_VALIDAR_ViewModel

@{
    ViewBag.Title = "retiros_buscar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="login">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-1 col-lg-1 col-xl-1"></div>
            <h1 class="col-md-4 cold-lg-4 col-xl-4 login-headline">GESTIÓN <strong>HUMANA</strong></h1>

            <div class="col-md-6 cold-lg-6 col-xl-6 login-form">
                <form method="post">
                    <h4 class="login-title">Administre ingresos, cambios y/o retiros</h4>
                    @{
                        if (@ViewBag.MensajeAlerta != null)
                        {
                            <div class="alert alert-danger">@ViewBag.MensajeAlerta</div>
                        }

                    }
                    @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "text-danger"})
                    @Html.TextBoxFor(m => m.Usuario, new { @class = "login-email campo-valido", @placeholder = "USUARIO", style = "text-transform:uppercase;", @id ="TextCorreo"})
                    @Html.ValidationMessageFor(m => m.Contraseña, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.Contraseña, new { @class = "login-password campo-valido", @type = "password", @placeholder = "CONTRASEÑA", @id ="TextContrasena" })
                    <input type="submit" value="INICIAR SESIÓN" class="btn btn-danger login-btn" />
                </form>
            </div>

            <div class="col-md-1 col-lg-1 col-xl-1"></div>
        </div>
    </div>
    <script src="../../assets/js/scripts.js"></script>
</body>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
