<script src="~/js/CALCULOS_SALARIOS.js"></script>
<script>

    var validateInfoSalarialIncap2 = true;
    var validateFormInfoSalarialIncap2 = function () {
        if ($('#MESES_GARANTIZADOS').val() == "" &&
            $('#COD_TIPO_SALARIO').val() == "" &&
            $('#COD_MERCADO').val() == "" &&
            $('#COD_CATEGORIA').val() == "") {
            validateInfoSalarialIncap2 = false;
        } else {
            validateInfoSalarialIncap2 = true;
        }
        console.log('validateInfoSalarialIncap2 ', validateInfoSalarialIncap2);
        return validateInfoSalarialIncap2;
    }

    $("#collapseInfoSalarialIncap2").on("hide.bs.collapse", function () {
        $(".div-span-collapseInfoSalarialIncap2").html('<span class="span-collapse"><i class="fas fa-chevron-down arrow-collapse"></i></span>');
    });
    $("#collapseInfoSalarialIncap2").on("show.bs.collapse", function () {
        $(".div-span-collapseInfoSalarialIncap2").html('<span class="span-collapse"><i class="fas fa-chevron-up arrow-collapse"></i></span>');
    });
</script>
