<script>
    
    $("#collapseInfoSalarialLicLec").on("hide.bs.collapse", function () {
        $(".div-span-collapseInfoSalarialLicLec").html('<span class="span-collapse"><i class="fas fa-chevron-down arrow-collapse"></i></span>');
    });
    $("#collapseInfoSalarialLicLec").on("show.bs.collapse", function () {
        $(".div-span-collapseInfoSalarialLicLec").html('<span class="span-collapse"><i class="fas fa-chevron-up arrow-collapse"></i></span>');
